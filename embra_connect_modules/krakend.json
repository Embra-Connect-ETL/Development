{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.krakend.io/schema/krakend.json",
  "title": "Schema validation for KrakenD configuration",
  "version": 3,
  "name": "API Gateway",
  "port": 8081,
  "cache_ttl": "3600s",
  "output_encoding": "json",
  "extra_config": {
      "plugin/http-server": {
          "enabled": true,
          "name": "custom_validation_plugin"
      }
  },
  "endpoints": [
      {
          "endpoint": "/authentication",
          "method": "POST",
          "backend": [
              {
                  "url_pattern": "/auth/login",
                  "host": ["http://localhost:5000"]
              }
          ]
      },
      {
          "endpoint": "/workspaces",
          "method": "GET",
          "backend": [
              {
                  "url_pattern": "/workspaces",
                  "host": ["http://localhost:5001"]
              }
          ]
      },
      {
          "endpoint": "/projects",
          "method": "GET",
          "backend": [
              {
                  "url_pattern": "/projects",
                  "host": ["http://localhost:5002"]
              }
          ]
      },
      {
          "endpoint": "/ide",
          "method": "GET",
          "backend": [
              {
                  "url_pattern": "/ide",
                  "host": ["http://localhost:5003"]
              }
          ]
      }
  ]
}
